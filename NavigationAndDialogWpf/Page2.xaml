<UserControl x:Class="NavigationAndDialogWpf.Page2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="500"
             Style="{DynamicResource PageStyle}">
    <Grid>

        <StackPanel>
            <Button x:Name="NavigateButton"
                    Content="Navigate to Page 3"
                    Style="{DynamicResource ButtonStyle}" />

            <Button x:Name="NavigateBackButton"
                    Content="Navigate back to Page 1"
                    Style="{DynamicResource ButtonStyle}" />

            <TextBlock Text="Navigation Parameter:"
                       Style="{DynamicResource LabelStyle}" />

            <TextBlock x:Name="NavigationParameter"
                       Style="{DynamicResource StatusTextStyle}" />
        </StackPanel>

    </Grid>
</UserControl>
